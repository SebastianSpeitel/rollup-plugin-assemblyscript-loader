{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es6"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2018"
    },
    "exclude": [
        "dist",
        "legacy",
        "node_modules"
    ]
}